         <li class="nav-item">
          <a class="nav-link" href="{{ path('security_registrarion') }}"><font style="vertical-align: inherit;">Inscription </font></a>
        </li>
<li class="nav-item">
          <a class="nav-link" href="{{ path('security_login') }}"><font style="vertical-align: inherit;">Connexion </font></a>
        </li>
