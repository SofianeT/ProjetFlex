{% extends 'base.html.twig' %}

{% block body %}
  <section class"inscription">
      <div class="row align-items-center p-5">
        <div class="col-6">
          <center><h1 class="display-3">Inscription</h1> 
          <br/><img class="img-thumbnail" src="https://cdn.pixabay.com/photo/2019/10/02/04/40/registration-4519979_960_720.jpg" alt="aboutUs" style="height: 400px;"><center/><br/>
        </div>
        <div class="col-6">
          {{ form_start(form) }}

            {{form_row(form.username, {'label':'Nom d\'utilisateur : ', 'attr': {'placeholder':" Votre pseudo "}})}}
            <br/>
            {{form_row(form.email,{'label':'Adresse mail : ', 'attr': {'placeholder':"Votre email "}})}}
            <br/>
            {{form_row(form.password, {'label':'Mot de passe : ', 'attr': {'placeholder':"Votre mot de passe "}})}}
            <br/>
            {{form_row(form.confirm_password, {'label':'Confirmation du mot de passe : ', 'attr': {'placeholder':"Confirmer votre mot de passe  "}})}}
          <br/>
            <button type="submit" class="btn btn-success">Inscription</button><br />
          {{ form_end(form) }}
        </div>
{% endblock %}